# Environment variables for Exam Buddy

# Application Environment (development, production, test)
NODE_ENV=development

# Port the server will run on
PORT=5001

# MongoDB Connection URI
MONGODB_URI=your_mongodb_connection_string_here

# JWT Configuration
JWT_SECRET=your_strong_jwt_secret_key_here
JWT_EXPIRES_IN=30d
JWT_COOKIE_EXPIRES_IN=30

# Frontend Client URL (for CORS and redirects)
CLIENT_URL=http://localhost:5173

# Email Configuration (optional, for features like password reset)
# EMAIL_SERVICE=Gmail # or SendGrid, Mailgun, etc.
# EMAIL_USERNAME=your_email_username
# EMAIL_PASSWORD=your_email_password_or_app_password
# EMAIL_FROM=noreply@exambuddy.com

# Rate Limiting (optional, defaults are set in config.js)
# RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
# RATE_LIMIT_MAX=100
