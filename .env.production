# Application
NODE_ENV=production
PORT=5000

# Database
MONGODB_URI=your_production_mongodb_uri

# JWT
JWT_SECRET=your_strong_jwt_secret_production
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Email
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_EMAIL=your_production_email
SMTP_PASSWORD=your_production_email_password
FROM_EMAIL=noreply@exambuddy.com
FROM_NAME=Exam Buddy

# Frontend
FRONTEND_URL=https://your-production-url.com

# Google OAuth
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret

# Firebase
FIREBASE_API_KEY=your_production_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_production_firebase_auth_domain
FIREBASE_PROJECT_ID=your_production_firebase_project_id
FIREBASE_STORAGE_BUCKET=your_production_firebase_storage_bucket
FIREBASE_MESSAGING_SENDER_ID=your_production_firebase_messaging_sender_id
FIREBASE_APP_ID=your_production_firebase_app_id

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_production_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_production_cloudinary_api_key
CLOUDINARY_API_SECRET=your_production_cloudinary_api_secret
